rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isLeagueMember(leagueId) {
      return exists(/databases/$(database)/documents/leagues/$(leagueId)/members/$(request.auth.uid));
    }

    function isLeagueOwner(leagueId) {
      return get(/databases/$(database)/documents/leagues/$(leagueId)).data.ownerId == request.auth.uid;
    }

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Users collection — only the owner can read their own profile
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    // Leagues collection
    match /leagues/{leagueId} {
      // get: members, owners, public leagues, or admin
      allow get: if isAuthenticated() && (
        isLeagueMember(leagueId) ||
        isLeagueOwner(leagueId) ||
        resource.data.isPublic == true ||
        isAdmin()
      );
      // list: authenticated users can query (needed for invite code lookup, public leagues)
      allow list: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isLeagueOwner(leagueId);
      allow delete: if isLeagueOwner(leagueId);

      // League members subcollection — members/owner can see members
      match /members/{memberId} {
        allow read: if isAuthenticated() && (
          isLeagueMember(leagueId) ||
          isLeagueOwner(leagueId) ||
          isOwner(memberId)
        );
        allow create: if isAuthenticated();
        allow update: if isLeagueOwner(leagueId) || isOwner(memberId);
        allow delete: if isLeagueOwner(leagueId) || isOwner(memberId);
      }

      // League invites subcollection
      match /invites/{inviteId} {
        allow read: if isAuthenticated();
        allow create: if isLeagueMember(leagueId);
        allow update, delete: if isLeagueOwner(leagueId);
      }
    }

    // Drivers collection (read-only for users)
    match /drivers/{driverId} {
      allow read: if true;
      allow write: if false;
    }

    // Constructors collection (read-only for users)
    match /constructors/{constructorId} {
      allow read: if true;
      allow write: if false;
    }

    // Fantasy teams collection
    match /fantasyTeams/{teamId} {
      // get: owner, league members, or admin
      allow get: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isLeagueMember(resource.data.leagueId) ||
        isLeagueOwner(resource.data.leagueId) ||
        isAdmin()
      );
      // list: authenticated users can query (constrained by client-side where clauses)
      // Firestore can't validate complex conditions on list queries,
      // so we allow list for authenticated users. Write rules still protect data.
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // Races collection (read-only for users)
    match /races/{raceId} {
      allow read: if true;
      allow write: if false;

      match /results/{resultId} {
        allow read: if true;
        allow write: if false;
      }
    }

    // Transactions collection
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Seasons collection (read-only)
    match /seasons/{seasonId} {
      allow read: if true;
      allow write: if false;
    }

    // Price history (read-only)
    match /priceHistory/{historyId} {
      allow read: if true;
      allow write: if false;
    }

    // Collection group query for league members
    // Needed for getUserLeagues — user queries their own memberships by userId field
    match /{path=**}/members/{memberId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == memberId ||
        resource.data.userId == request.auth.uid
      );
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create, delete: if false;
    }
  }
}
